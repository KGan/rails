<div class="modal fade" id="reply-modal-<%=commentable_id%>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <a class="close" data-dismiss="modal" >x</a>
        <h4 class="modal-title">Reply</h4>
      </div>

      <div class="modal-body">
        <form action="<%= comments_url %>" method="POST">
            <%= csrf_inject %>
            <textarea name="comment[content]" rows="10" cols="30"></textarea>
            <input type="hidden" name="comment[post_id]" value="<%=postid%>">
            <input type="hidden" name="comment[commentable_id]" value="<%=commentable_id%>" >
            <input type="hidden" name="comment[commentable_type]" value="<%=commentable_type%>">
      </div>
      <div class="modal-footer">
        <input type="submit" class="btn btn-success" value="Submit" >
        </form>
        <a href="#" class="btn" data-dismiss="modal">Cancel</a>
      </div>
    </div>
  </div>
</div>
