<%= render_heirarchy(@heirarchy) %>
<h2><%= @post.title %></h2>
<p><%= @post.content %></p>
<%= render 'votes/vote_form', votable_id: @post.id, votable_type: @post.class.name %>

<%= render 'shared/comment_form', post: @post, commentable_type:@post.class.name, commentable_id:@post.id %>

<h3>Comments:</h3>
<% if @children %>
  <% @post.comments.each do |comment| %>
    <%= comment_tree(comment, @children) %>
  <% end %>
<% end %>
